generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Size {
  SMALL
  MEDIUM
  LARGE
}

enum EnergyLevel {
  LOW
  MEDIUM
  HIGH
}

enum IndependencyLevel {
  LOW
  MEDIUM
  HIGH
}

enum Ambient {
  SMALL
  MEDIUM
  LARGE
}

model Pet {
  id                 String            @id @default(uuid())
  name               String
  description        String
  age                Int
  size               Size              @default(MEDIUM)
  energy_level       EnergyLevel       @default(MEDIUM)
  independency_level IndependencyLevel @default(MEDIUM)
  ambient            Ambient           @default(MEDIUM)

  created_at DateTime @default(now())

  Org   Org?    @relation(fields: [orgId], references: [id])
  orgId String?

  @@map("pets")
}

enum State {
  AC
  AL
  AP
  AM
  BA
  CE
  DF
  ES
  GO
  MA
  MT
  MS
  MG
  PA
  PB
  PR
  PE
  PI
  RJ
  RN
  RS
  RO
  RR
  SC
  SP
  SE
  TO
}

model Org {
  id               String   @id @default(uuid())
  responsible_name String
  email            String   @unique
  postalCode       String
  address          String
  neighborhood     String
  number           String
  city             String
  state            State
  whatsapp_number  String
  password_hash    String
  created_at       DateTime @default(now())

  pets Pet[]

  @@map("orgs")
}
